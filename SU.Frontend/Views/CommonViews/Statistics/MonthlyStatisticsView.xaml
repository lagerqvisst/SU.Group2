<Window x:Class="SU.Frontend.Views.CommonViews.Statistics.MonthlyStatisticsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helper="clr-namespace:SU.Frontend.Helper.SU.Frontend.Helper"
        Title="Monthly Insurance Statistics" Height="450" Width="800" Background="White">

    <Window.Resources>
        <helper:ViewModelLocator x:Key="Locator" />
    </Window.Resources>

    <Grid DataContext="{Binding MonthlyStatisticsViewModel, Source={StaticResource Locator}}" Background="White">
        <!-- Title and Header -->
        <TextBlock Text="Monthly Insurance Statistics" FontWeight="Bold" FontSize="24" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <!-- Border for DataGrid -->
        <Border BorderBrush="Green" BorderThickness="2" Margin="20,80,20,50">
            <StackPanel Margin="10">
                <!-- DataGrid for showing statistics -->
                <DataGrid ItemsSource="{Binding InsuranceStatistics}" AutoGenerateColumns="True" 
                          Margin="0,10,0,0" Height="300">
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
