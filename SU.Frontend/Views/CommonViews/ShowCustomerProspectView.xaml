<Window x:Class="SU.Frontend.Views.CommonViews.ShowCustomerProspectView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helper="clr-namespace:SU.Frontend.Helper.SU.Frontend.Helper"
        Title="ShowCustomerProspectView" 
        Width="1000" Height="600"
        WindowStartupLocation="CenterScreen">


    <Window.Resources>
        <helper:ViewModelLocator x:Key="Locator" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Background="White" Margin="20" DataContext="{Binding ShowCustomerProspectViewModel, Source={StaticResource Locator}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Title "Prospects" -->
        <TextBlock Text="Prospects" 
                   FontWeight="Bold" FontSize="20" 
                   HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Grid.ColumnSpan="2" Margin="20,20,0,0"/>

        <!-- Left Panel - Client List with Green Border -->
        <Border Grid.Column="0" BorderBrush="Green" BorderThickness="2" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0">
            <StackPanel Width="250" Margin="10">
                <TextBlock Text="Private Customers" FontWeight="Bold" Margin="0,0,0,10"/>
                <ComboBox Height="30" Margin="0,0,0,10" 
                          ItemsSource="{Binding PrivateCustomers}" 
                          DisplayMemberPath="FirstName" 
                          SelectedItem="{Binding SelectedPrivateCustomer}"/>

                <TextBlock Text="Company Customers" FontWeight="Bold" Margin="0,20,0,10"/>
                <ComboBox Height="30" Margin="0,0,0,10" 
                          ItemsSource="{Binding CompanyCustomers}" 
                          DisplayMemberPath="CompanyName" 
                          SelectedItem="{Binding SelectedCompanyCustomer}"/>
            </StackPanel>
        </Border>

        <!-- Right Panel - Private Customer Details with Green Border -->
        <Border Grid.Column="1" BorderBrush="Green" BorderThickness="2" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0"
                Visibility="{Binding IsPrivateCustomerVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Width="300" Margin="10">
                <TextBlock Text="Private Customer Information" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <TextBlock Text="First Name:" FontWeight="Bold"/>
                <TextBlock Text="{Binding SelectedPrivateCustomer.FirstName}"/>

                <TextBlock Text="Last Name:" FontWeight="Bold" Margin="10,0,0,0"/>
                <TextBlock Text="{Binding SelectedPrivateCustomer.LastName}"/>

                <TextBlock Text="Email:" FontWeight="Bold" Margin="10,0,0,0"/>
                <TextBlock Text="{Binding SelectedPrivateCustomer.Email}"/>

                <TextBlock Text="Phone Number:" FontWeight="Bold" Margin="10,0,0,0"/>
                <TextBlock Text="{Binding SelectedPrivateCustomer.PhoneNumber}"/>

                <!-- Prospect Status -->
                <TextBlock Text="Prospect Status:" FontWeight="Bold" Margin="10,10,0,0"/>
                <ComboBox Height="30" Width="160" ItemsSource="{Binding AvailableStatuses}" 
                          SelectedItem="{Binding SelectedStatus}" Margin="0,0,0,10"/>

                <!-- Note -->
                <TextBlock Text="Note:" FontWeight="Bold" Margin="10,10,0,0"/>
                <TextBox Width="160" Height="60" TextWrapping="Wrap" Text="{Binding Comment}" Margin="0,0,0,10"/>

                <!-- Date of Contact -->
                <TextBlock Text="Date of Contact:" FontWeight="Bold" Margin="10,10,0,0"/>
                <DatePicker Width="160" SelectedDate="{Binding ContactDate}" Margin="0,0,0,10"/>

                <!-- Save Button -->
                <Button Content="Save" Width="100" Height="30" HorizontalAlignment="Center" Margin="10"/>
            </StackPanel>
        </Border>

        <!-- Right Panel - Company Customer Details with Green Border -->
        <Border Grid.Column="1" BorderBrush="Green" BorderThickness="2" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0"
                Visibility="{Binding IsCompanyCustomerVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Width="300" Margin="10">
                <TextBlock Text="Company Customer Information" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <TextBlock Text="Company Name:" FontWeight="Bold"/>
                <TextBlock Text="{Binding SelectedCompanyCustomer.CompanyName}"/>

                <TextBlock Text="Contact Person:" FontWeight="Bold" Margin="10,0,0,0"/>
                <TextBlock Text="{Binding SelectedCompanyCustomer.ContactPerson}"/>

                <TextBlock Text="Phone Number:" FontWeight="Bold" Margin="10,0,0,0"/>
                <TextBlock Text="{Binding SelectedCompanyCustomer.ContactPersonPhonenumber}"/>

                <!-- Prospect Status -->
                <TextBlock Text="Prospect Status:" FontWeight="Bold" Margin="10,10,0,0"/>
                <ComboBox Height="30" Width="160" ItemsSource="{Binding AvailableStatuses}" 
                          SelectedItem="{Binding SelectedStatus}" Margin="0,0,0,10"/>

                <!-- Note -->
                <TextBlock Text="Note:" FontWeight="Bold" Margin="10,10,0,0"/>
                <TextBox Width="160" Height="60" TextWrapping="Wrap" Text="{Binding Comment}" Margin="0,0,0,10"/>

                <!-- Date of Contact -->
                <TextBlock Text="Date of Contact:" FontWeight="Bold" Margin="10,10,0,0"/>
                <DatePicker Width="160" SelectedDate="{Binding ContactDate}" Margin="0,0,0,10"/>

                <!-- Save Button -->
                <Button Content="Save" Width="100" Height="30" HorizontalAlignment="Center" Margin="10"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
