<Window x:Class="SU.Frontend.Views.CommonViews.RegisterNewCustomerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helper="clr-namespace:SU.Frontend.Helper.SU.Frontend.Helper"
        Title="Register New Customer" Height="450" Width="800">


    <Window.Resources>
        <helper:ViewModelLocator x:Key="Locator"/>
    </Window.Resources>

    <Grid DataContext="{Binding RegisterNewCustomerViewModel, Source={StaticResource Locator}}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Choose customer type to register" FontSize="20" TextAlignment="Center" Margin="0,0,0,20"/>
            <Button Content="Company Customer" Width="200" Height="50" Command="{Binding ToNewRegisterCompanyCommand}"/>
            <Button Content="Private Customer" Width="200" Height="50" Command="{Binding ToNewRegisterPrivateCommand}"/>
        </StackPanel>
    </Grid>
</Window> 
