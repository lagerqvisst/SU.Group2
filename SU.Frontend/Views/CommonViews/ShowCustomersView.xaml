<Window x:Class="SU.Frontend.Views.CommonViews.ShowCustomersView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SU.Frontend.Views.CommonViews"
        xmlns:controls="clr-namespace:SU.Frontend.Views.UserControls"
        xmlns:helper="clr-namespace:SU.Frontend.Helper.SU.Frontend.Helper"
        mc:Ignorable="d"
        Title="ShowCustomersView" Height="450" Width="800">

    <UserControl.Resources>
        <helper:ViewModelLocator x:Key="Locator"/>
    </UserControl.Resources>


    <Grid Background="White" DataContext="{Binding ShowCustomerViewModel, Source= {StaticResource Locator}}">
        <!-- Title - Client Information -->
        <TextBlock Text="Client information" FontWeight="Bold" FontSize="20" 
           HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,46,0,0"/>

        <!-- Left Panel - Client List with Border -->
        <Border BorderBrush="Green" BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,141,0,0" Height="183">
            <StackPanel Width="200" Margin="10">
                <TextBlock Text="Private customers" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- ComboBox for Private Customers -->
                <ComboBox Height="30" Margin="0,0,0,10" 
                      ItemsSource="{Binding PrivateCustomers}" 
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedCustomer}" />

                <TextBlock Text="Company customers" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- ComboBox for Company Customers -->
                <ComboBox Height="30" Margin="0,0,0,10" 
                      ItemsSource="{Binding CompanyCustomers}" 
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedCustomer}" />

                <Button Content="Select" Width="80" Height="30" HorizontalAlignment="Left"/>
            </StackPanel>
        </Border>

        <!-- Right Panel - Client Details with Border -->
        <Border BorderBrush="Green" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,141,0,0">
            <StackPanel Width="300" Margin="10">
                <TextBlock Text="Client details:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <!-- Client details - Bind the properties of SelectedCustomer -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Name:" FontWeight="Bold" Width="120"/>
                    <TextBlock Text="{Binding SelectedCustomer.Name}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Last Name:" FontWeight="Bold" Width="120"/>
                    <TextBlock Text="{Binding SelectedCustomer.LastName}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ID number:" FontWeight="Bold" Width="120"/>
                    <TextBlock Text="{Binding SelectedCustomer.IDNumber}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Address:" FontWeight="Bold" Width="120"/>
                    <TextBlock Text="{Binding SelectedCustomer.Address}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Postal code:" FontWeight="Bold" Width="120"/>
                    <TextBlock Text="{Binding SelectedCustomer.PostalCode}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Phone number:" FontWeight="Bold" Width="120"/>
                    <TextBlock Text="{Binding SelectedCustomer.PhoneNumber}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="E-mail:" FontWeight="Bold" Width="120"/>
                    <TextBlock Text="{Binding SelectedCustomer.Email}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>



</Window>
