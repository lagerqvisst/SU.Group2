<Window x:Class="SU.Frontend.Views.CommonViews.ShowCustomersView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SU.Frontend.Views.CommonViews"
        xmlns:controls="clr-namespace:SU.Frontend.Views.UserControls"
        mc:Ignorable="d"
        Title="ShowCustomersView" Height="450" Width="800">

    <Grid Background="White">
        <!-- Title - Client Information -->
        <TextBlock Text="Client information" FontWeight="Bold" FontSize="20" 
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,46,0,0"/>

        <!-- Left Panel - Client List with Border -->
        <Border BorderBrush="Green" BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,141,0,0" Height="183">
            <StackPanel Width="200" Margin="10">
                <TextBlock Text="Select a client or enter clients ID" FontWeight="Bold" Margin="0,0,0,10"/>

                <ComboBox Height="30" Margin="0,0,0,10">
                    <!-- Placeholder for binding ItemsSource and SelectedItem -->

                    <ComboBox Height="30" Margin="0,0,0,10" 
                      ItemsSource="{Binding Employees}" 
                      DisplayMemberPath="${FirstName} + {LastName}"
                      SelectedItem="{Binding SelectedEmployee}" />





                </ComboBox>

                <TextBox Text="SearchTextBox" Width="200" Height="30" HorizontalAlignment="Left">
                    
                </TextBox>
                  

                <Button Content="Select" Width="80" Height="30" HorizontalAlignment="Left"/>
            </StackPanel>
        </Border>

        <!-- Right Panel - Client Details with Border -->
        <Border BorderBrush="Green" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,141,0,0">
            <StackPanel Width="300" Margin="10">
                <TextBlock Text="Client details:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Insurance type:" FontWeight="Bold" Width="120"/>
                    <TextBlock Text="Placeholder for binding"/>
                    <!-- Placeholder for binding -->
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Name:" FontWeight="Bold" Width="120"/>
                    <TextBlock Text="Placeholder for binding"/>
                    <!-- Placeholder for binding -->
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Last Name:" FontWeight="Bold" Width="120"/>
                    <TextBlock Text="Placeholder for binding"/>
                    <!-- Placeholder for binding -->
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ID number:" FontWeight="Bold" Width="120"/>
                    <TextBlock Text="Placeholder for binding"/>
                    <!-- Placeholder for binding -->
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Address:" FontWeight="Bold" Width="120"/>
                    <TextBlock Text="Placeholder for binding"/>
                    <!-- Placeholder for binding -->
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Postal code:" FontWeight="Bold" Width="120"/>
                    <TextBlock Text="Placeholder for binding"/>
                    <!-- Placeholder for binding -->
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Phone number:" FontWeight="Bold" Width="120"/>
                    <TextBlock Text="Placeholder for binding"/>
                    <!-- Placeholder for binding -->
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="E-mail:" FontWeight="Bold" Width="120"/>
                    <TextBlock Text="Placeholder for binding"/>
                    <!-- Placeholder for binding -->
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main View, Logout Button and SignedInUserUserControl -->
        <controls:MainViewButtonControl HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,160,10,0"/>
        <controls:LogoutButtonControl HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"/>
        <controls:SignedInUserUserControl HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,10,10,10"/>


    </Grid>



</Window>
