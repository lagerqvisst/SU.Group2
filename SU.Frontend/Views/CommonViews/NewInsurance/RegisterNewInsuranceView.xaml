<Window x:Class="SU.Frontend.Views.CommonViews.RegisterNewInsuranceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helper="clr-namespace:SU.Frontend.Helper.SU.Frontend.Helper"
        Title="Register New Insurance" Height="350" Width="500">

    <Window.Resources>
        <helper:ViewModelLocator x:Key="Locator"/>
    </Window.Resources>

    <Grid DataContext="{Binding RegisterNewInsuranceViewModel, Source={StaticResource Locator}}" Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Choose insurance category to register" FontSize="20" Margin="0,0,0,20" TextAlignment="Center"/>

            <!-- Buttons for Insurance Category Selection -->
            <Button Content="Private Insurance" Width="200" Height="50" Command="{Binding ToNewPrivateInsuranceCommand}" Margin="0,10,0,10"/>
            <Button Content="Company Insurance" Width="200" Height="50" Command="{Binding ToNewCompanyInsuranceCommand}"/>
        </StackPanel>
    </Grid>
</Window>
