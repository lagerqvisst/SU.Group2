<Window x:Class="SU.Frontend.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,10" PlaceholderText="Username"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,20" PlaceholderText="Password"/>
            <Button Command="{Binding LoginCommand}" Width="200" Content="Login"/>
        </StackPanel>
    </Grid>
</Window>
