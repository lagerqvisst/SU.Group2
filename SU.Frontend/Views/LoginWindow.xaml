<Window x:Class="SU.Frontend.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid x:Name="MainGrid">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <!-- Title with Company Name -->
                <TextBlock FontSize="24" FontWeight="Bold" HorizontalAlignment="Center">
                    <TextBlock.Inlines>
                        <Run Text="TOPP" Foreground="Green"/>
                        <Run Text="FÖRSÄKRINGAR" Foreground="Black"/>
                    </TextBlock.Inlines>
                </TextBlock>
                <Line X1="0" Y1="0" X2="1" Y2="0" Stroke="Black" StrokeThickness="2" Margin="0,5"/>
                <TextBlock Text="Privat &amp; Företagsförsäkringar" 
                           FontSize="16" 
                           FontWeight="Regular" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,30"/>

                
                <!-- Login Form -->
                <TextBox Text="{Binding Path=UserName, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10" 
                         Padding="12" 
                         Width="300" 
                         Height="45" 
                         />
                <TextBox Text="{Binding Path=Password, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,20" 
                         Padding="12" 
                         Width="300" 
                         Height="45" 
                         />
                <Button Content="{Binding ButtonContent}" 
                        Command="{Binding LoginCommand}" 
                        Margin="0" 
                        Padding="10" 
                        Width="300" 
                        Height="40" 
                        VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
