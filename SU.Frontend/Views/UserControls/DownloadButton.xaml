<UserControl x:Class="SU.Frontend.Views.UserControls.DownloadButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="150">
    <Grid>
        <!-- Button with both icon and text -->
        <Button Width="120" Height="60" ToolTip="Export to Excel"
                  BorderBrush="Gray">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <!-- Path for download icon -->
                <Path Data="M10,0 L10,20 L5,20 L15,30 L25,20 L20,20 L20,0 Z M5,30 L25,30 L25,35 L5,35 Z" 
                      Fill="Black"
                      Width="30" Height="30"/>
                <!-- Text below the icon -->
                <TextBlock Text="Export to Excel" FontSize="14" Margin="0,5,0,0"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
