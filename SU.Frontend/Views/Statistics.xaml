<Window x:Class="SU.Frontend.Views.Statistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="Seller Statistics">

    <StackPanel>
        <!-- Title for the statistics view -->
        <TextBlock Text="Seller Statistics Overview" FontSize="20" FontWeight="Bold" Margin="10" />

        <!-- Button to load statistics -->
        <Button Command="{Binding LoadStatisticsCommand}" Content="Load Statistics" Margin="10" />

        <lvc:CartesianChart
            Series="{Binding Series}"
            XAxes="{Binding XAxes}"
            YAxes="{Binding YAxes}"
            LegendPosition="Left"
            LegendBackgroundPaint="{Binding LegendBackgroundPaint}"
            LegendTextPaint="{Binding LegendTextPaint}"
            LegendTextSize="16"
            Height="500"
            Margin="10">
        </lvc:CartesianChart>







    </StackPanel>
</Window>
